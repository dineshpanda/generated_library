<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All visitor entries
    </h1>

    <a href="/visitor_entries/new" class="btn btn-block btn-outline-secondary">
      Add a new visitor entry
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "visitor_entry_templates/visitor_entries_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Visit date
        </th>

        <th>
          User
        </th>

        <th>
          Book
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @visitor_entries.each do |visitor_entry| %>
      <tr>
        <td>
          <%= visitor_entry.id %>
        </td>

        <td>
          <%= visitor_entry.visit_date %>
        </td>

        <td>
          <% if visitor_entry.user.present? %>
            <a href="/users/<%= visitor_entry.user.id %>">
              <%= visitor_entry.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if visitor_entry.book.present? %>
            <a href="/books/<%= visitor_entry.book.id %>">
              <%= visitor_entry.book.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(visitor_entry.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(visitor_entry.updated_at) %> ago
        </td>

        <td>
          <a href="/visitor_entries/<%= visitor_entry.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @visitor_entries, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
