<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All visitor entries
    </h1>

    <a href="/visitor_entries/new" class="btn btn-block btn-outline-secondary">
      Add a new visitor entry
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Visit date
        </th>

        <th>
          User
        </th>

        <th>
          Book
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @visitor_entries.each do |visitor_entry| %>
      <tr>
        <!-- Display visitor_entry.id start -->
        <td>
          <%= visitor_entry.id %>
        </td>
        <!-- Display visitor_entry.id end -->

        <!-- Display visitor_entry.visit_date start -->
        <td>
          <%= visitor_entry.visit_date %>
        </td>
        <!-- Display visitor_entry.visit_date end -->

        <!-- Display visitor_entry.user_id start -->
        <td>
          <%= visitor_entry.user.email %>
        </td>
        <!-- Display visitor_entry.user_id end -->

        <!-- Display visitor_entry.book_id start -->
        <td>
          <%= visitor_entry.book.name %>
        </td>
        <!-- Display visitor_entry.book_id end -->

        <!-- Display visitor_entry.created_at start -->
        <td>
          <%= time_ago_in_words(visitor_entry.created_at) %> ago
        </td>
        <!-- Display visitor_entry.created_at end -->

        <!-- Display visitor_entry.updated_at start -->
        <td>
          <%= time_ago_in_words(visitor_entry.updated_at) %> ago
        </td>
        <!-- Display visitor_entry.updated_at end -->

        <td>
          <a href="/visitor_entries/<%= visitor_entry.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
