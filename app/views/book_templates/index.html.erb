<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All books
    </h1>

    <a href="/books/new" class="btn btn-block btn-outline-secondary">
      Add a new book
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "book_templates/books_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Author
        </th>

        <th>
          Publish date
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.id %>
        </td>

        <td>
          <%= book.name %>
        </td>

        <td>
          <% if book.author.present? %>
            <a href="/users/<%= book.author.id %>">
              <%= book.author.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= book.publish_date %>
        </td>

        <td>
          <%= time_ago_in_words(book.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(book.updated_at) %> ago
        </td>

        <td>
          <a href="/books/<%= book.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @books, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
