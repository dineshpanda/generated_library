<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All books
    </h1>

    <a href="/books/new" class="btn btn-block btn-outline-secondary">
      Add a new book
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Author
        </th>

        <th>
          Publish date
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @books.each do |book| %>
      <tr>
        <!-- Display book.id start -->
        <td>
          <%= book.id %>
        </td>
        <!-- Display book.id end -->

        <!-- Display book.name start -->
        <td>
          <%= book.name %>
        </td>
        <!-- Display book.name end -->

        <!-- Display book.author_id start -->
        <td>
          <%= book.author_id %>
        </td>
        <!-- Display book.author_id end -->

        <!-- Display book.publish_date start -->
        <td>
          <%= book.publish_date %>
        </td>
        <!-- Display book.publish_date end -->

        <!-- Display book.created_at start -->
        <td>
          <%= time_ago_in_words(book.created_at) %> ago
        </td>
        <!-- Display book.created_at end -->

        <!-- Display book.updated_at start -->
        <td>
          <%= time_ago_in_words(book.updated_at) %> ago
        </td>
        <!-- Display book.updated_at end -->

        <td>
          <a href="/books/<%= book.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
