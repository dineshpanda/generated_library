<!-- Form photo start -->
<form action="/create_photo_from_book" method="post">
<!-- Form photo end -->

  <!-- Label and input for img start -->
  <div class="form-group">
    <label for="img">
      Img
    </label>

    <!-- Input for img start -->
    <input type="text" id="img" name="img" class="form-control" value="<%= @photo.img %>">
    <!-- Input for img end -->
  </div>
  <!-- Label and input for img end -->

  <!-- Label and input for loc start -->
  <div class="form-group">
    <label for="loc">
      Loc
    </label>

    <!-- Input for loc start -->
    <input type="text" id="loc" name="loc" class="form-control" value="<%= @photo.loc %>">
    <!-- Input for loc end -->
  </div>
  <!-- Label and input for loc end -->

  <!-- Label and input for book_id start -->
  <!-- Input for book_id start -->
  <input type="hidden" name="book_id" value="<%= @book.id %>">
  <!-- Input for book_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create photo
  </button>
</form>
