<h1>
  Add a new photo
</h1>


<hr>

<form action="/create_photo" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="img">
      Img
    </label>

    <input type="file" id="img" name="img" class="form-control">
  </div>

  <div class="form-group">
    <label for="loc">
      Loc
    </label>

    <input type="text" id="loc" name="loc" class="form-control">
  </div>

  <div class="form-group">
    <label for="book_id">
      Book
    </label>

    <%= select_tag(:book_id, options_from_collection_for_select(Book.all, :id, :name, @photo.book_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create photo
  </button>
</form>

<hr>

<a href="/photos">
  Go back
</a>
