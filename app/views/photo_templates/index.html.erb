<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All photos
    </h1>

    <a href="/photos/new" class="btn btn-block btn-outline-secondary">
      Add a new photo
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->
<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "photo_templates/all_photos_map" %>
  </div>
</div>
<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Img
        </th>

        <th>
          Loc
        </th>

        <th>
          Book
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @photos.each do |photo| %>
      <tr>
        <!-- Display photo.id start -->
        <td>
          <%= photo.id %>
        </td>
        <!-- Display photo.id end -->

        <!-- Display photo.img start -->
        <td>
          <img src='<%= photo.img %>' class='img-fluid'>
        </td>
        <!-- Display photo.img end -->

        <!-- Display photo.loc start -->
        <td>
          <%= photo.loc %>
        </td>
        <!-- Display photo.loc end -->

        <!-- Display photo.book_id start -->
        <td>
          <%= photo.book.name %>
        </td>
        <!-- Display photo.book_id end -->

        <!-- Display photo.created_at start -->
        <td>
          <%= time_ago_in_words(photo.created_at) %> ago
        </td>
        <!-- Display photo.created_at end -->

        <!-- Display photo.updated_at start -->
        <td>
          <%= time_ago_in_words(photo.updated_at) %> ago
        </td>
        <!-- Display photo.updated_at end -->

        <td>
          <a href="/photos/<%= photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @photos, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
