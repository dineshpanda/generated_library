<!-- Validation failure messages -->
<% if @photo.errors.any? %>
  <% @photo.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit photo #<%= @photo.id %>
</h1>

<hr>

<!-- Form photo start -->
<form action="/update_photo/<%= @photo.id %>" method="post" enctype="multipart/form-data">
<!-- Form photo end -->

  <!-- Label and input for img start -->
  <div class="form-group">
    <label for="img">
      Img
    </label>

    <!-- Input for img start -->
    <%= cl_image_tag(@photo.img.to_s, :width => 90, :height => 90, :crop => :thumb) %>
    <input type="file" id="img" name="img" class="form-control">
    <!-- Input for img end -->
  </div>
  <!-- Label and input for img end -->

  <!-- Label and input for loc start -->
  <div class="form-group">
    <label for="loc">
      Loc
    </label>

    <!-- Input for loc start -->
    <input type="text" id="loc" name="loc" class="form-control" value="<%= @photo.loc %>">
    <!-- Input for loc end -->
  </div>
  <!-- Label and input for loc end -->

  <!-- Label and input for book_id start -->
  <div class="form-group">
    <label for="book_id">
      Book
    </label>

    <!-- Input for book_id start -->
    <%= select_tag(:book_id, options_from_collection_for_select(Book.all, :id, :name, @photo.book_id), :class => "form-control") %>
    <!-- Input for book_id end -->
  </div>
  <!-- Label and input for book_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update photo
  </button>
</form>

<hr>

<a href="/photos">
  Go back
</a>
