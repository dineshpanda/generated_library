<!-- Validation failure messages -->
<% if @photo.errors.any? %>
  <% @photo.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit photo #<%= @photo.id %>
</h1>

<hr>

<!-- Form photo start -->
<form action="/update_photo/<%= @photo.id %>" method="post">
<!-- Form photo end -->

  <!-- Label and input for img start -->
  <div class="form-group">
    <label for="img">
      Img
    </label>

    <!-- Input for img start -->
    <input type="text" id="img" name="img" class="form-control" value="<%= @photo.img %>">
    <!-- Input for img end -->
  </div>
  <!-- Label and input for img end -->

  <!-- Label and input for loc start -->
  <div class="form-group">
    <label for="loc">
      Loc
    </label>

    <!-- Input for loc start -->
    <input type="text" id="loc" name="loc" class="form-control" value="<%= @photo.loc %>">
    <!-- Input for loc end -->
  </div>
  <!-- Label and input for loc end -->

  <!-- Label and input for book_id start -->
  <div class="form-group">
    <label for="book_id">
      Book
    </label>

    <!-- Input for book_id start -->
    <input type="text" id="book_id" name="book_id" class="form-control" value="<%= @photo.book_id %>">
    <!-- Input for book_id end -->
  </div>
  <!-- Label and input for book_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update photo
  </button>
</form>

<hr>

<a href="/photos">
  Go back
</a>
